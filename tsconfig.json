{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "allowJs": false,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "allowUnreachableCode": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}

{
  "name": "LiNotify",
  "description": "__MSG_extensionDescription__",
  "manifest_version": 2,
  "default_locale": "en",
  "permissions": [
    "alarms",
    "storage", 
    "notifications"
  ],
  "icons": {
    "48": "assets/linotify_icon48.png",
    "96": "assets/linotify_icon96.png",
    "128": "assets/linotify_icon128.png"
  },
  "browser_action": {
    "browser_style": true,
    "default_title": "LiNotify",
    "default_icon": {
      "16": "assets/linotify_icon16.png",
      "32": "assets/linotify_icon32.png",
      "48": "assets/linotify_icon48.png",
      "128": "assets/linotify_icon128.png"
    },
    "theme_icons": [{
      "light": "assets/linotify_icon16.png",
      "dark": "assets/linotify_icon16.png",
      "size": 16
    }, {
      "light": "assets/linotify_icon16.png",
      "dark": "assets/linotify_icon32.png",
      "size": 32
    }, {
      "light": "assets/linotify_icon48.png",
      "dark": "assets/linotify_icon48.png",
      "size": 48
    }, {
      "light": "assets/linotify_icon128.png",
      "dark": "assets/linotify_icon128.png",
      "size": 128
    }],
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [ "http://*.lichess.org/*", "https://*.lichess.org/*" ],
      "js": ["content.js"],
      "css": [ "content.css" ]
    }
  ],
  "web_accessible_resources": [
    "assets/fonts/linotify.woff2"
  ]
}
